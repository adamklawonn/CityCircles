%fieldset#fancyform
  %legend Sign In
  = f.label :username
  %br
  = f.text_field :login
  %div#loginValidatorMsg
    = error_message_on "user", "login"
  = f.label :password
  %br
  = f.password_field :password
  %div#passwordValidatorMsg
    = error_message_on "user", "password"
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.submit "Login"
