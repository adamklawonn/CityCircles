#content.grid_12
  #midmap.grid_8.alpha
    = render :partial => 'maps/map', :locals => { :map => @map }
  #twitter.grid_4.omega
    #twtr-search-widget
    = javascript_include_tag "http://widgets.twimg.com/j/1/widget.js"
    = stylesheet_link_tag "http://widgets.twimg.com/j/1/widget.css"
    :javascript
      new TWTR.Widget({
        search: '_citycircles OR #citycircles',
        id: 'twtr-search-widget',
        loop: true,
        title: 'City Circles',
        subject: 'twittersphere',
        width: 300,
        height: 302,
        theme: {
          shell: {
            background: '#c7dacd',
            color: '#ffffff'
          },
          tweets: {
            background: '#ffffff',
            color: '#444444',
            links: '#1985b5'
          }
        }
      }).render().start();
  .clear
  #news.grid_4.alpha
    #infohead
    %a{ :href => "#", :class => "tooltip", :title => "Post News" }
      = image_tag "smalladd.png", { :class => "buttonfloat", :border => 0 }
    %a{ :href => "#", :class => "tooltip", :title => "Subscribe to News Feed" }
      = image_tag "smallrss.png", { :class => "buttonfloat", :border => 0 }
    %h1
      news
      = image_tag "newscon.png", { :border => 0 }
    .infoblock
      - unless @news.empty?
        - @news.each do |news|
          %h2
            = link_to truncate( news.headline, :length => 30 ), news_url( news )
      - else
        %h2 No news...be the first to post!
      
 
