  .grid_12.alpha
    = render :partial => "citycircles/mini_twitter_feed"
  .clear
  #news.grid_4.alpha
    #infohead
    %a{ :href => "#", :class => "tooltip", :title => "Subscribe to News Feed" }
      = link_to image_tag( "smallrss.png", { :class => "buttonfloat", :border => 0 } ), all_news_posts_url( @poi, :format => "xml" ), :class => "tooltip", :title => "Subscribe to News Feed"
    %h1
      = link_to "news", posts_url(:shortname => "news")
      = image_tag "map_icons/news/newsimage.png", { :border => 0, :height => 20 }
    .infoblock
      - unless @news.empty?
        - @news.each do |news|
          %h2.headline
            = link_to truncate( news.short_headline, :length => 39 ), news_post_url( news )
      - else
        %h2.headline No news...be the first to post!
      
 
