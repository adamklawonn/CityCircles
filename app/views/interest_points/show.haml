  .clear
  #news.grid_4.alpha
    - if current_user
      = link_to_remote image_tag( "smalladd.png", { :class => "buttonfloat", :border => 0 } ), :url => { :action => "add_content", :content_type => "news", :poi_id => @poi.id }, :class => "tooltip", :title => "Post News"
    - else
      = link_to_function image_tag( "smalladd.png", { :class => "buttonfloat", :border => 0 } ), "$j( '#whoops' ).html( 'You must sign in to post content.' ).dialog( 'open' );", :class => "tooltip", :title => "Post News"
    = link_to image_tag( "smallrss.png", { :class => "buttonfloat", :border => 0 } ), interest_point_news_index_url( @poi, :format => "xml" ), :class => "tooltip", :title => "Subscribe to News Feed"
    %h1
      news
      = image_tag "newscon.png", { :border => 0 }
    .infoblock
      - unless @news.empty?
        - @news.each do |news|
          %h2
            = link_to truncate( news.headline, 30 ), news_url( news )
      - else
        %h2 No news...be the first to post!
      %h5
        - unless @news.empty?
          = link_to "more>>", interest_point_news_index_url( @poi )
        -else
          more>>
