!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %title oo City Circles oo
    = stylesheet_link_tag "reset"
    = stylesheet_link_tag "text"
    = stylesheet_link_tag "960"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "custom-theme/jquery-ui-1.7.2.custom.css"
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery-1.3.2.min.js"
    = javascript_include_tag "jquery-ui-1.7.2.custom.min.js"
    = javascript_include_tag "map.js"
    = javascript_include_tag "livevalidation_prototype.compressed.js"
    :javascript
      var $j = jQuery.noConflict();
      $j(document).ready(
        function(){
          //$j( "#signindialog" ).dialog( { width : 400, autoOpen : false, resizable : false, draggable : false } );
          //$j( "#signinlink" ).click( function() { $j( "#signindialog" ).dialog( "open" ); } );
        }
      );

    = GMap.header
    :javascript
      // Call GUnload when page unloads. Memory :)
      Event.observe( window, "onunload", GUnload );

  %body
    #wrapper.container_12
      .grid_12
        /ad
      .clear

      .grid_4
        = link_to image_tag( "logo.png", :alt => 'City Circles' ), root_path
      #navigation.grid_5
        %ul
          %li
            -if current_user_session.nil?
              %a#signinlink{ :href => new_user_session_path } sign in
            -else 
              = link_to "sign out (#{ current_user.login })", user_session_url( current_user ), :method => :delete
          %li
            %a{ :href => "profile.html" }
              profile
      #addcontent.grid_3
        %a.iframe{ :href => "createcontent.html" }
        %h3
          add content
      .clear
      
      .grid_12
        = error_messages_for 'user_session', :header_message => nil, :message => nil
      
      .grid_12
        = yield
      .clear

      .grid_12
        #footer
          %ul
            %li
              %a{ :href => "#" }
                contact
            %li
              %a{ :href => "#" }
                about
            %li
              %a{ :href => "#" }
                advertise
      .clear